<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MobileAPP.ViewModels"
             x:Class="MobileAPP.Pages.ClientsPage"
             x:DataType="viewmodel:ClientViewModel"
             Title="Profil Client">

    <Grid RowDefinitions="Auto,*">
        <Button
            Grid.Row="0"
            Text="ÃŽnapoi"
            Clicked="OnBackClicked"
            HorizontalOptions="Start"
            Margin="10"
            BackgroundColor="Gray"
            TextColor="White" />
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">
                <ActivityIndicator
                IsRunning="{Binding IsLoading}"
                IsVisible="{Binding IsLoading}"
                HeightRequest="50"
                HorizontalOptions="Center" />

            <Label
                Text="{Binding ErrorMessage}"
                TextColor="Red"
                IsVisible="{Binding HasErrorMessage}"
                Margin="10" />

            <Border
                Stroke="{StaticResource Gray300}"
                BackgroundColor="White"
                StrokeThickness="1"
                Padding="20"
                Margin="0,0,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.1"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="15">
                    <Label
                        Text="Profile Information"
                        FontSize="20"
                        FontAttributes="Bold"
                        Margin="0,0,0,10" />

                    <Entry
                        Placeholder="Name"
                        Text="{Binding Name}"
                        IsReadOnly="{Binding IsNotEditing}"
                        IsEnabled="{Binding IsNotLoading}" />

                    <Entry
                        Placeholder="Phone"
                        Text="{Binding Phone}"
                        Keyboard="Telephone"
                        IsReadOnly="{Binding IsNotEditing}"
                        IsEnabled="{Binding IsNotLoading}" />

                    <Entry
                        Placeholder="Email"
                        Text="{Binding Email}"
                        Keyboard="Email"
                        IsReadOnly="{Binding IsNotEditing}"
                        IsEnabled="{Binding IsNotLoading}" />

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Button
                            Grid.Column="0"
                            Text="Save"
                            Command="{Binding SaveClientCommand}"
                            IsVisible="{Binding IsEditing}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Margin="0,10,0,0" />

                        <Button
                            Grid.Column="1"
                            Text="Cancel"
                            Command="{Binding CancelEditingCommand}"
                            IsVisible="{Binding IsEditing}"
                            BackgroundColor="Gray"
                            TextColor="White"
                            Margin="0,10,0,0" />

                        <Button
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Text="Edit"
                            Command="{Binding StartEditingCommand}"
                            IsVisible="{Binding IsNotEditing}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Margin="0,10,0,0" />
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>