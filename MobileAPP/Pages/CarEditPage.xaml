<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MobileAPP.ViewModels"
             x:Class="MobileAPP.Pages.CarEditPage"
             x:DataType="viewmodel:CarEditViewModel"
             Title="Car">

    <Grid RowDefinitions="Auto,*">
        <Button
            Grid.Row="0"
            Text="ÃŽnapoi"
            Clicked="OnBackClicked"
            HorizontalOptions="Start"
            Margin="10"
            BackgroundColor="Gray"
            TextColor="White" />
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">
                <ActivityIndicator
                    IsRunning="{Binding IsLoading}"
                    IsVisible="{Binding IsLoading}"
                    HeightRequest="50"
                    HorizontalOptions="Center" />

                <Label
                    Text="{Binding ErrorMessage}"
                    TextColor="Red"
                    IsVisible="{Binding HasErrorMessage}"
                    Margin="10" />

                <Border
                    Stroke="{StaticResource Gray300}"
                    BackgroundColor="White"
                    StrokeThickness="1"
                    Padding="20"
                    Margin="0,0,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.1"/>
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="15">
                        <Label
                            FontSize="20"
                            FontAttributes="Bold"
                            Margin="0,0,0,10">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding IsEditMode}" Value="True">
                                    <Setter Property="Text" Value="Edit Car" />
                                </DataTrigger>
                                <DataTrigger TargetType="Label" Binding="{Binding IsEditMode}" Value="False">
                                    <Setter Property="Text" Value="Add New Car" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>

                        <Label Text="Brand *" FontSize="14" FontAttributes="Bold" />
                        <Entry
                            Placeholder="e.g. Honda"
                            Text="{Binding Brand}"
                            IsEnabled="{Binding IsNotLoading}" />

                        <Label Text="Model *" FontSize="14" FontAttributes="Bold" Margin="0,5,0,0" />
                        <Entry
                            Placeholder="e.g. Civic"
                            Text="{Binding Model}"
                            IsEnabled="{Binding IsNotLoading}" />

                        <Label Text="Year *" FontSize="14" FontAttributes="Bold" Margin="0,5,0,0" />
                        <Entry
                            Placeholder="e.g. 2020"
                            Text="{Binding Year}"
                            Keyboard="Numeric"
                            IsEnabled="{Binding IsNotLoading}" />

                        <Label Text="Plate Number *" FontSize="14" FontAttributes="Bold" Margin="0,5,0,0" />
                        <Entry
                            Placeholder="e.g. AB-12-CD"
                            Text="{Binding PlateNumber}"
                            IsEnabled="{Binding IsNotLoading}" />

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                            <Button
                                Grid.Column="0"
                                Text="Save"
                                Command="{Binding SaveCarCommand}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White" />

                            <Button
                                Grid.Column="1"
                                Text="Cancel"
                                Clicked="OnCancelClicked"
                                BackgroundColor="Gray"
                                TextColor="White" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
