<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAPP.MainPage"
             Title="Service Auto">

    <ScrollView>
        <VerticalStackLayout
            Padding="20,40"
            Spacing="25">
            
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,20">
                <VerticalStackLayout Grid.Column="0">
                    <Label
                        Text="Bun venit la Service Auto"
                        FontSize="28"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Margin="0,0,0,10" />

                    <Label
                        Text="Sistem de gestionare pentru service auto"
                        FontSize="16"
                        HorizontalOptions="Start"
                        TextColor="Gray" />
                </VerticalStackLayout>
                <Button
                    Grid.Column="1"
                    Text="Logout"
                    Command="{Binding LogoutCommand}"
                    IsVisible="{Binding IsAuthenticated}"
                    BackgroundColor="Red"
                    TextColor="White"
                    Padding="15,5"
                    VerticalOptions="Start" />
            </Grid>

            <Grid
                RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                ColumnDefinitions="*"
                RowSpacing="20">
                
                <!-- Clienți Card -->
                <Border
                    Grid.Row="0"
                    Stroke="{StaticResource Gray300}"
                    BackgroundColor="White"
                    StrokeThickness="1"
                    Padding="20"
                    Margin="0,0,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.1"/>
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="10">
                        <Label
                            Text="Clienți"
                            FontSize="20"
                            FontAttributes="Bold" />
                        <Label
                            Text="Gestionează clienții"
                            FontSize="14"
                            TextColor="Gray" />
                        <Button
                            Text="Vezi Clienți"
                            Command="{Binding NavigateToClientsCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </Border>

                <!-- Vehicule Card -->
                <Border
                    Grid.Row="1"
                    Stroke="{StaticResource Gray300}"
                    BackgroundColor="White"
                    StrokeThickness="1"
                    Padding="20"
                    Margin="0,0,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.1"/>
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="10">
                        <Label
                            Text="Vehicule"
                            FontSize="20"
                            FontAttributes="Bold" />
                        <Label
                            Text="Gestionează vehiculele"
                            FontSize="14"
                            TextColor="Gray" />
                        <Button
                            Text="Vezi Vehicule"
                            Command="{Binding NavigateToCarsCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </Border>

                <!-- Servicii Card -->
                <Border
                    Grid.Row="2"
                    Stroke="{StaticResource Gray300}"
                    BackgroundColor="White"
                    StrokeThickness="1"
                    Padding="20"
                    Margin="0,0,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.1"/>
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="10">
                        <Label
                            Text="Servicii"
                            FontSize="20"
                            FontAttributes="Bold" />
                        <Label
                            Text="Gestionează serviciile"
                            FontSize="14"
                            TextColor="Gray" />
                        <Button
                            Text="Vezi Servicii"
                            Command="{Binding NavigateToServicesCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </Border>

                <!-- Programări Card -->
                <Border
                    Grid.Row="3"
                    Stroke="{StaticResource Gray300}"
                    BackgroundColor="White"
                    StrokeThickness="1"
                    Padding="20"
                    Margin="0,0,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.1"/>
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="10">
                        <Label
                            Text="Programări"
                            FontSize="20"
                            FontAttributes="Bold" />
                        <Label
                            Text="Gestionează programările"
                            FontSize="14"
                            TextColor="Gray" />
                        <Button
                            Text="Vezi Programări"
                            Command="{Binding NavigateToAppointmentsCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </Border>

                <!-- Mecanici Card -->
                <Border
                    Grid.Row="4"
                    Stroke="{StaticResource Gray300}"
                    BackgroundColor="White"
                    StrokeThickness="1"
                    Padding="20"
                    Margin="0,0,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.1"/>
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="10">
                        <Label
                            Text="Mecanici"
                            FontSize="20"
                            FontAttributes="Bold" />
                        <Label
                            Text="Gestionează mecanicii"
                            FontSize="14"
                            TextColor="Gray" />
                        <Button
                            Text="Vezi Mecanici"
                            Command="{Binding NavigateToMechanicsCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </Border>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
