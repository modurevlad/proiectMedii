@page
@model WebApplication.Pages.Appointments.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.Id" />
            <div class="form-group">
<span class="text-danger">*</span>
                <label asp-for="Appointment.AppointmentDate" class="control-label"></label>
                <input asp-for="Appointment.AppointmentDate" class="form-control" aria-required="true"/>
                <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
            </div>
            @if (Model.IsAdmin)
            {
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label asp-for="Appointment.Status" class="control-label"></label>
                    <select asp-for="Appointment.Status" class="form-control" asp-items="ViewBag.Status"></select>
                    <span asp-validation-for="Appointment.Status" class="text-danger"></span>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="Appointment.Status" />
                <div class="form-group">
                    <label class="control-label">Status</label>
                    <input type="text" class="form-control" value="@Model.Appointment.Status" readonly />
                    <small class="form-text text-muted">Only administrators can change the status.</small>
                </div>
            }
            <div class="form-group">
                <label asp-for="Appointment.CarId" class="control-label"></label>
                <select asp-for="Appointment.CarId" class="form-control" asp-items="ViewBag.CarId" ></select>
                <span asp-validation-for="Appointment.CarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.MechanicId" class="control-label"></label>
                <select asp-for="Appointment.MechanicId" class="form-control" asp-items="ViewBag.MechanicId" ></select>
                <span asp-validation-for="Appointment.MechanicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
